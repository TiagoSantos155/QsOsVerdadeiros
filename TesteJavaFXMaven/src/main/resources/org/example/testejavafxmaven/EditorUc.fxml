<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.testejavafxmaven.EditorUcController">
    <top>
        <Label text="Definir UC's para o Curso"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 15; -fx-background-color: #3498db; -fx-text-fill: white;"/>
    </top>

    <center>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
            <Label fx:id="labelCursoSelecionado" text="Curso: [Selecionado]" style="-fx-font-size: 18px; -fx-underline: true;"/>
            <ListView fx:id="listViewUCs" style="-fx-pref-height: 300px; -fx-pref-width: 300px;"/>
            <ComboBox fx:id="comboBoxTipoAvaliacao" promptText="Selecione o Tipo de Avaliação"/>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
            <Button text="Definir UC's" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" onAction="#definirUCs"/>
            <Button text="Voltar" onAction="#handleVoltar" style="-fx-background-color: #4A90E2; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 14px; -fx-border-radius: 5px;" />
        </HBox>
    </bottom>
</BorderPane>