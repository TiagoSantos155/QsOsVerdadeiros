<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>


<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.testejavafxmaven.EscolhaUCsController">
    <children>
        <VBox spacing="20.0" alignment="CENTER" AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <padding>
                <!-- Define o padding de forma mais espaçosa -->
                <Insets top="30.0" right="30.0" bottom="30.0" left="30.0" />
            </padding>

            <!-- Título centralizado com fonte maior -->
            <Label text="Escolha as UCs" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #34495e;" />

            <!-- ListView com itens com mais espaçamento e cor de fundo -->
            <ListView fx:id="listViewUCs" prefWidth="350.0" prefHeight="250.0" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 10px; -fx-padding: 15px; -fx-font-size: 14px;">
                <!-- Defina a aparência dos itens se necessário -->
            </ListView>

            <!-- HBox para os botões lado a lado -->
            <HBox spacing="20.0" alignment="CENTER">
                <!-- Botão "Definir" -->
                <Button text="Definir" onAction="#definirUCs" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12px 25px; -fx-border-radius: 30px; -fx-font-weight: bold;" />

                <!-- Botão "Voltar" -->
                <Button text="Voltar" onAction="#voltar" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12px 25px; -fx-border-radius: 30px; -fx-font-weight: bold;" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
