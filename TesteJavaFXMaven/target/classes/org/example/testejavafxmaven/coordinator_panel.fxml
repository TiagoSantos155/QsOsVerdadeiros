<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.testejavafxmaven.CoordinatorPanelController">
    <top>
        <Label text="Painel do Coordenador" style="-fx-font-size: 18px; -fx-font-weight: bold;" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <VBox spacing="10" alignment="CENTER">
            <Button text="Listar Cursos" fx:id="btnListarCursos" onAction="#handleListarCursos"/>
            <Button text="Listar Unidades Curriculares" fx:id="btnListarUC" onAction="#handleListarUC"/>
            <Button text="Editor de Cursos" fx:id="btnEditorCursos" onAction="#handleEditorCursos"/>
            <Button text="Editor de UC's" fx:id="btnEditorUC" onAction="#handleEditorUC"/>
        </VBox>
    </center>
    <bottom>
        <Button text="Voltar" onAction="#handleVoltar" BorderPane.alignment="CENTER"/>
    </bottom>
</BorderPane>