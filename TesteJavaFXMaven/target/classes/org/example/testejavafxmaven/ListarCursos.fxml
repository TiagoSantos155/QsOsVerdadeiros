<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.testejavafxmaven.ListarCursosController">
    <top>
        <Label text="Listar Cursos" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #4A90E2;" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <VBox spacing="15" BorderPane.alignment="CENTER" style="-fx-padding: 15; -fx-background-color: #f4f4f4;">
            <TableView fx:id="tableCursos" prefHeight="400" prefWidth="650" style="-fx-border-color: #ddd; -fx-background-color: #fff; -fx-border-radius: 5;">
                <columns>
                    <TableColumn text="ID" fx:id="colId" prefWidth="100" />
                    <TableColumn text="Nome" fx:id="colNome" prefWidth="500" />
                </columns>
            </TableView>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 15; -fx-background-color: #f4f4f4;">
            <Button text="Voltar" onAction="#handleVoltar" style="-fx-background-color: #4A90E2; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 14px; -fx-border-radius: 5px;" />
        </HBox>
    </bottom>
</BorderPane>
