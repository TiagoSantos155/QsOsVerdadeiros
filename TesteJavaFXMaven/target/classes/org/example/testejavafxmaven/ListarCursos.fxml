<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.testejavafxmaven.ListarCursosController">
    <top>
        <Label text="Listar Cursos" style="-fx-font-size: 18px; -fx-font-weight: bold;" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <VBox spacing="10" BorderPane.alignment="CENTER" style="-fx-padding: 10;">
            <TableView fx:id="tableCursos" prefHeight="400" prefWidth="600">
                <columns>
                    <TableColumn text="ID" fx:id="colId" prefWidth="100" />
                    <TableColumn text="Nome" fx:id="colNome" prefWidth="500" />
                </columns>
            </TableView>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <Button text="Voltar" onAction="#handleVoltar" />
        </HBox>
    </bottom>
</BorderPane>
