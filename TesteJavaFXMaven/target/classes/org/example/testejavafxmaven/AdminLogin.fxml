<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.testejavafxmaven.AdminLoginController">

    <!-- Cabeçalho -->
    <top>
        <Label text="Login do Administrador"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 15; -fx-background-color: #3498db; -fx-text-fill: white;"/>
    </top>

    <!-- Conteúdo principal -->
    <center>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20;">
            <Label text="Insira as credenciais de administrador:" style="-fx-font-size: 16px;"/>

            <TextField fx:id="usernameField" promptText="Usuário" style="-fx-pref-width: 250px;"/>
            <PasswordField fx:id="passwordField" promptText="Senha" style="-fx-pref-width: 250px;"/>

            <Button text="Entrar" style="-fx-pref-width: 120px; -fx-background-color: #2980b9; -fx-text-fill: white;" onAction="#validarCredenciais"/>
        </VBox>
    </center>

    <!-- Rodapé -->
    <bottom>
        <Button text="Voltar" style="-fx-font-size: 14px; -fx-padding: 10;" onAction="#voltar"/>
    </bottom>
</BorderPane>
