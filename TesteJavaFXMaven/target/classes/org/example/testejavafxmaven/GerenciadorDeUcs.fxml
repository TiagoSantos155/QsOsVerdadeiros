<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.testejavafxmaven.GerenciadorDeUCsController">

    <top>
        <Label text="Definir UC's para o Curso"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 15; -fx-background-color: #3498db; -fx-text-fill: white;"/>
    </top>

    <center>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
            <Label fx:id="labelCursoSelecionado" style="-fx-font-size: 18px; -fx-underline: true;"/>
            <ListView fx:id="listViewUCs" style="-fx-pref-height: 300px; -fx-pref-width: 300px;">
                <!-- Não preenchemos os itens aqui, pois serão preenchidos dinamicamente no controlador -->
            </ListView>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
            <Button text="Definir" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" onAction="#definirUCs"/>
            <Button text="Voltar" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" onAction="#voltar"/>
        </HBox>
    </bottom>
</BorderPane>

